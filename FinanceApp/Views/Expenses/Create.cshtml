@{
    ViewData["Title"] = "Create an Expense";
}
@model FinanceApp.Models.Expense

<div class="container">
    <h2 class="text-center">Add an Expense</h2>

    <form asp-action="Create" method="post">
        <div>
            <label asp-for="Description" class="form-label">Add Description</label>
            <input asp-for="Description" class="form-control" />
        </div>
        <div>
            <label asp-for="Amount" class="form-label">Add Amount</label>
            <input asp-for="Amount" class="form-control" type="number" />
        </div>
        <div>
            <label asp-for="Category" class="form-label">Add Category</label>
            <input asp-for="Category" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Add Expense</button>
    </form>
</div>