@{
	ViewData["Title"] = "Create Expense Sheet";
}
@model FinanceApp.Models.ExpenseSheet

<div class="container">
    <h2 class="text-center">Create new Expense Sheet</h2>

    <form asp-action="Create" method="post">
        <div>
            <label asp-for="Title" class="form-label">Enter Title</label>
            <input asp-for="Title" class="form-control" />
        </div>
        <div>
            <label asp-for="Description" class="form-label">Add Description</label>
            <input asp-for="Description" class="form-control" />
        </div>
        <div>
            <label asp-for="StartDate" class="form-label">Select Start Date</label>
            <input asp-for="StartDate" type="date" class="form-control" />
        </div>
        <div>
            <label asp-for="EndDate" class="form-label">Select End Date</label>
            <input asp-for="EndDate" type="date" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Create Expense Sheet</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>